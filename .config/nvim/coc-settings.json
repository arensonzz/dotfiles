{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [ "c", "cc", "cpp", "cuda", "c++", "objc", "objcpp" ],
      "rootPatterns": [
        ".ccls",
        "Debug/compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "highlight": {
          "lsRanges": true
        },
        "client": {
          "snippetSupport": true
        },
        "compilationDatabaseDirectory": "Debug",
        "clang": {
          "extraArgs": [ "-I/usr/include", "-I/usr/include/x86_64-linux-gnu", "-I/usr/include/c++/11", "-I/usr/include/x86_64-linux-gnu/c++/11"]
        }
      }
    },
  },
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": "f"
  },
  "suggest.autoTrigger": "always",
  "suggest.minTriggerInputLength": 3,
  "suggest.noselect": false,

  "diagnostic.displayByAle": true,
  "diagnostic.enable": false,
  "diagnostic.checkCurrentLine": true,
  "diagnostic.messageTarget": "echo",
  "diagnostic.signPriority": 9999999,

  "python.linting.enabled": false,
  "python.analysis.typeCheckingMode": "off",

  "html.format.enable": false,
  "html.filetypes": [
    "html",
    "handlebars",
    "htmldjango",
    "blade",
    "html.jinja",
    "jinja.html",
    "htmljinja"
  ],
  "html.validate.styles": false,
  "html.validate.scripts": false,
  "html.autoClosingTags": false,

  "eslint.enable": true,
  "tsserver.enable": true,
  "tsserver.npm": "/usr/bin/npm",

  "snippets.extends": {
      "python": ["django"]
  },
  "snippets.userSnippetsDirectory": "~/.config/nvim/UltiSnips",
  "snippets.ultisnips.directories": [
    "UltiSnips"
  ],
  "snippets.loadFromExtensions": true,

  "coc.preferences.extensionUpdateCheck": "weekly",

  "cmake.lsp.enable": true,

  "rust-analyzer.diagnostics.enable": false,

  "sql.database": "postgresql"
}
